<odoo>
<data>
    <!-- session tree list -->
    <record id="view_academic_session_tree" model="ir.ui.view">
        <field name="name">academic.session.tree</field>
        <field name="model">academic.session</field>
        <field name="type">tree</field>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <tree string="Session">
                <field name="name" />
                <field name="instructor_id" />
                <field name="start_date" />
                <field name="duration" />
                <field name="seats" />
                <field name="taken_seats" widget="progressbar" />
                <field name="active" />
            </tree>
        </field>
    </record>
    <!-- session form -->
    <record id="view_academic_session_form" model="ir.ui.view">
        <field name="name">academic.session.form</field>
        <field name="model">academic.session</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Session">
                <div class="oe_title">
                    <label for="name" class="oe_edit_only" string="Session Name"/>
                    <h1>
                        <field name="name" />
                    </h1>
                </div>

                <group>
                    <!-- kolom kiri -->
                    <group>
                        <field name="course_id" />
                        <field name="instructor_id" domain="['|','|',('is_instructor','=',True), ('category_id','=','Instructor'),('category_id','=','Trainer')]"/>
                        <field name="start_date" />
                    </group>

                    <!-- kolom kanan -->
                    <group>
                        <field name="duration" />
                        <field name="seats" />
                        <field name="taken_seats" widget="progressbar"/>
                        <field name="active" />
                    </group>
                </group>
                
 
                <notebook>
                    <page string="Attendee">
                        <field name="attendee_ids">
                            <tree>
                                <field name="name" />
                                <field name="session_id" />
                                <field name="partner_id" />
                            </tree>
                        </field>
                    </page>
                </notebook>

            </form>
        </field>
    </record>
</data>
</odoo>