<odoo>
<data>
    <!-- session tree list -->
    <record id="view_academic_session_tree" model="ir.ui.view">
        <field name="name">academic.session.tree</field>
        <field name="model">academic.session</field>
        <field name="type">tree</field>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <tree string="Session"
                decoration-success="taken_seats &lt; 50"
                decoration-warning="taken_seats &gt; 50 and taken_seats &lt; 80"
                decoration-danger="taken_seats &gt;= 80"
            >
                <field name="name" />
                <field name="instructor_id" />
                <field name="start_date" />
                <field name="duration" />
                <field name="seats" />
                <field name="taken_seats" widget="progressbar" />
                <field name="active" />
            </tree>
        </field>
    </record>
    <!-- session form -->
    <record id="view_academic_session_form" model="ir.ui.view">
        <field name="name">academic.session.form</field>
        <field name="model">academic.session</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Session">

                <header>
                    <button string="Confirm" type="object" name="action_open" states='draft'/>
                    <button string="Mark as done" type="object" name="action_done" states='open'/>
                    <button string="Reset to draft" type="object" name="action_draft" states='open,done'/>
                    <field name="state" widget="statusbar" />
                </header>

                <div class="oe_title">
                    <label for="name" class="oe_edit_only" string="Session Name"/>
                    <h1>
                        <field name="name" />
                    </h1>
                </div>

                <group>
                    <!-- kolom kiri -->
                    <group>
                        <field name="course_id" />
                        <field name="instructor_id" domain="['|','|',('is_instructor','=',True), ('category_id','=','Instructor'),('category_id','=','Trainer')]"/>
                        <field name="start_date" />
                        <field name="image_small" widget="image" class="oe_avatar" />
                    </group>

                    <!-- kolom kanan -->
                    <group>
                        <field name="duration" />
                        <field name="seats" />
                        <field name="taken_seats" widget="progressbar"/>
                        <field name="active" />
                    </group>
                </group>
                
 
                <notebook>
                    <page string="Attendee">
                        <field name="attendee_ids">
                            <tree>
                                <field name="name" />
                                <field name="session_id" />
                                <field name="partner_id" />
                            </tree>
                        </field>
                    </page>
                </notebook>

            </form>
        </field>
    </record>
    <!-- session calendar -->
    <record id="view_academic_session_calendar" model="ir.ui.view">
        <field name="name">view_academic_calendar</field>
        <field name="model">academic.session</field>
        <field name="arch" type="xml">
            <calendar string="Session"
                date_start="start_date"
                color="course_id"
            >
                <field name="name" />
            </calendar>
        </field>
    </record>
    <!-- search -->
    <record id="view_academic_session_filter" model="ir.ui.view">
        <field name="name">view_academic_session_search</field>
        <field name="model">academic.session</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="instructor_id" />

                <filter string="Non zero duration"
                    name="non_zero"
                    domain="[('duration','>',0)]"
                />
                <group string="Group by...">
                    <filter name="Group_by_course" string="Course"
                        context="{'group_by':'course_id'}"
                        domain="[]"
                    />

                    <filter name="Group_by_instructor" string="Instructor"
                        context="{'group_by':'instructor_id'}"
                        domain="[]"
                    />

                    <filter name="Group_by_date" string="Date"
                        context="{'group_by':'start_date'}"
                        domain="[]"
                    />                    
                </group>
            </search>
        </field>
    </record>
    <!-- graph -->
    <record id="view_academic_session_graph" model="ir.ui.view">
        <field name="name">view_academic_session_graph</field>
        <field name="model">academic.session</field>
        <field name="arch" type="xml">
            <graph string="Session" type="bar">
                <field name="instructor_id"/>
            </graph>
        </field>
    </record>
    <!-- kanban -->
    <record id="view_academic_session_kanban" model="ir.ui.view">
        <field name="name">view_academic_session_kanban</field>
        <field name="model">academic.session</field>
        <field name="arch" type="xml">
            <field name="id" />
            <kanban default_group_by="course_id">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette">
                            <div class="oe_kanban_details">
                                <img t-att-src ="kanban_image ('academic.session','image_small','record.id.raw_value')" class="o_kanban_image"/>
                                <h4>
                                    <a type="open"><field name="name" /></a>
                                </h4>
                                <ul>
                                    <li>Seats: <field name="seats" /></li>
                                    <li>Taken Seats: <field name="taken_seats" /></li>
                                    <li>Instructor: <field name="instructor_id" /></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</data>
</odoo>